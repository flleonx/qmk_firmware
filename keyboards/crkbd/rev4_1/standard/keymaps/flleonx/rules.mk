# Split keyboard settings
SPLIT_KEYBOARD = yes

# Disable RGB Matrix
RGB_MATRIX_ENABLE = no

# Optional: Enable other features if needed
OLED_ENABLE = no  # If your CRKBD has OLEDs
ENCODER_ENABLE = no  # Adjust based on your hardware
